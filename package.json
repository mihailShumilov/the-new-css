{
  "name": "the-new-css",
  "version": "1.0.18",
  "description": "A super lightweight, utility-first CSS library. No build step required.",
  "main": "dist/the-new-css.min.css",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:modules": "node scripts/build-modules.js",
    "size": "node scripts/size-report.js",
    "dev": "npm run build && cd site && npx next dev --turbopack --port 3000",
    "build:site": "npm run build && cd site && npm ci && npx next build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:all": "npm test && npm run test:e2e",
    "seo:audit": "node scripts/seo-audit.js"
  },
  "keywords": [
    "css",
    "utility-first",
    "lightweight",
    "modern-css",
    "no-build"
  ],
  "author": "",
  "type": "module",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mihailShumilov/the-new-css"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.0",
    "@playwright/test": "^1.40.0",
    "css-tree": "^2.3.0",
    "gzip-size": "^7.0.0",
    "lightningcss": "^1.22.0",
    "sirv-cli": "^2.0.0",
    "vitest": "^1.0.0"
  }
}
